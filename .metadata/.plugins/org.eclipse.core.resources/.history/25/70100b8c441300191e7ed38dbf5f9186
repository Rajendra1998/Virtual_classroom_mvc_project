<script>
	function Sam()
	{
		var aa=document.getElementById("button");
		if(aa.type=="password")
		{
  	  	aa.type="text";
		}else{
   	 	aa.type="password";
		}
	}
	function Valid1()
	{
	     var a=document.stud.uid.value;
	     var b=document.stud.pass.value;
	     if(a==""||a==null)
	     {
	    	 alert("Please enter your Registration number");
	         return false;
	     }
	     if(b==""||b==null)
	     {
	    	 alert("Please enter your PASSWORD");
	         return false;
	     }
	}
	function change(x)
	{
		if(x==1)
	    {
		     location.href='Faculty_login.html';
		}
		else if(x==2)
		{
			location.href='Admin_login.html';		
		}
		return;
	}
	</script>
