<script>
function Sam()
{
	var aa=document.getElementById("button");
	if(aa.type=="password")
	{
	  	aa.type="text";
	}else{
	 	aa.type="password";
	}
}
	function Valid1()
	{
	     var a=document.faculty.uid.value;
	     var b=document.faculty.pass.value;
	     if(a==""||a==null)
	     {
	    	 alert("Please enter your user-id");
	         return false;
	     }
	     if(b==""||b==null)
	     {
	    	 alert("Please enter your Password");
	         return false;
	     }
	}
	function change(x)
	{
		if(x==1)
	    {
		     location.href='Student_login.html';
		}
		else if(x==2)
		{
			location.href='Admin_login.html';		
		}
		return;
	}
	</script>

