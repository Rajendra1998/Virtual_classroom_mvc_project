package controller;

import java.io.IOException;
import java.io.PrintWriter;

import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;

import dao.StudentDAO;
import model.Student;

public class StudentProfile extends HttpServlet
{
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException 
	{
		HttpSession session=request.getSession(false);
		Student currentUser=(Student)session.getAttribute("currentSessionUser");
		response.setContentType("text/html");
		
		RequestDispatcher rd=request.getRequestDispatcher("Student_logged1.jsp");
		rd.include(request,response);
		PrintWriter out=response.getWriter();
		out.println("Name="+currentUser.getName());
		out.println("Registration No.="+currentUser.getUser_id());
		out.println("Password="+currentUser.getPassword());
		out.println("Email_id="+currentUser.getE_id());
		out.println("Phone no.="+currentUser.getPh_no());
		

	}

}
